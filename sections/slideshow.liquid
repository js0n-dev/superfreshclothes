                        srcset="{%- if mobile_block_settings.settings.mobile_image.width >= 375 -%}{{ mobile_block_settings.settings.mobile_image | img_url: '375x' }} 375w,{%- endif -%}
                          {%- if mobile_block_settings.settings.mobile_image.width >= 750 -%}{{ mobile_block_settings.settings.mobile_image | img_url: '750x' }} 750w,{%- endif -%}
                          {{ mobile_block_settings.settings.mobile_image | img_url: 'master' }} {{ mobile_block_settings.settings.mobile_image.width }}w"
                        sizes="100vw"
                        src="{{ mobile_block_settings.settings.mobile_image | img_url: '750x' }}"
                        loading="lazy"
                        alt="{{ mobile_block_settings.settings.mobile_image.alt | escape }}"
