{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}

{%- assign slider_visual = section.settings.slider_visual | default: 'counter' -%}

{%- if section.settings.enable_mobile_settings -%}
  {%- assign mobile_section_settings = section -%}
{%- endif -%}
{%- assign mobile_text_box_position = mobile_section_settings.settings.mobile_text_box_position | default: 'below' -%}
{%- assign mobile_image_height = mobile_section_settings.settings.mobile_image_height | default: 'adapt' -%}

{%- style -%}
  {%- if section.settings.image_height == 'adapt' -%}
    {%- if section.blocks.first.settings.image != blank -%}
      {%- assign image_aspect_ratio = section.blocks.first.settings.image.aspect_ratio | default: 0.66 -%}
      {% capture image_aspect_ratio %}{{ 1 | divided_by: image_aspect_ratio | times: 100 }}%{% endcapture %}
    {%- else -%}
      {%- assign image_aspect_ratio = 0.7 -%}
    {%- endif -%}
  {%- elsif section.settings.image_height contains 'fullscreen' -%}
    {% capture image_aspect_ratio %}calc(100vh{% if section.settings.image_height contains 'without_header' %} - var(--header-height) - var(--top-section-spacing){% endif %}){% endcapture %}
  {%- elsif section.settings.image_height == 'fixed' -%}
    {% capture image_aspect_ratio %}{{ section.settings.image_fixed_height | divided_by: 10.0 }}rem{% endcapture %}
  {%- endif -%}

  #Slider-{{ section.id }} .banner::before,
  #Slider-{{ section.id }} .banner__media::before {
    padding-bottom: {{ image_aspect_ratio }};
    content: '';
    display: block;
  }
  
  {%- if section.settings.image_height == 'fixed' -%}
    {% capture image_aspect_ratio %}{{ section.settings.image_fixed_height | divided_by: 10.0 | times: 0.85 }}rem{% endcapture %}
  {%- endif -%}

  @media screen and (max-width: 1399px) {
    #Slider-{{ section.id }} .banner::before,
    #Slider-{{ section.id }} .banner__media::before {
      padding-bottom: {{ image_aspect_ratio }};
    }
  }
  
  {%- if mobile_image_height == 'inherit_desktop' and section.settings.image_height == 'adapt' -%}
    {%- assign inherit_desktop_adapt = true -%}
  {%- endif -%}
  {%- if mobile_image_height == 'adapt' or inherit_desktop_adapt -%}
    {%- assign image_aspect_ratio = section.blocks.first.settings.mobile_image.aspect_ratio | default: section.blocks.first.settings.image.aspect_ratio | default: 0.66 -%}
    {% capture image_aspect_ratio %}{{ 1 | divided_by: image_aspect_ratio | times: 100 }}%{% endcapture %}
  {%- elsif mobile_image_height contains 'fullscreen' -%}
    {% capture image_aspect_ratio %}calc(100vh{% if mobile_image_height contains 'without_header' %} - var(--header-height) - var(--top-section-spacing){% endif %}){% endcapture %}
  {%- elsif mobile_image_height == 'fixed' -%}
    {% capture image_aspect_ratio %}{{ mobile_section_settings.settings.mobile_image_fixed_height | divided_by: 10.0 }}rem{% endcapture %}
  {%- endif -%}

  @media screen and (max-width: 992px) {
    /* #Slider-{{ section.id }} .banner {
      min-height: {{ image_aspect_ratio }};
    } */

    #Slider-{{ section.id }} .banner::before,
    #Slider-{{ section.id }} .banner__media::before,
    #Slider-{{ section.id }} .banner:not(.banner--mobile-bottom) .banner__content::before {
      padding-bottom: {{ image_aspect_ratio }};
    }
  }

  

  {%- if section.settings.width == 'wide' -%}
    @media screen and (min-width: 993px) {
      #Slider-{{ section.id }} .banner {
        border-radius: 0;
      }
    }
    @media screen and (max-width: 992px) {
      #Slider-{{ section.id }} .banner__media {
        border-radius: 0;
      }
    }
  {%- endif -%}
{%- endstyle -%}

{%- style -%}
  {%- for block in section.blocks -%}
    #Slide-{{ section.id }}-{{ forloop.index }} .media-overlay {
      --opacity-default: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
      {%- if block.settings.image_overlay_background_color.alpha > 0 -%}
        --media-overlay-color-value: rgb({{ block.settings.image_overlay_background_color.red }}, {{ block.settings.image_overlay_background_color.green }}, {{ block.settings.image_overlay_background_color.blue }});
      {%- endif -%}
      {% if block.settings.image_overlay_background_gradient != blank %}
        --media-overlay-color-value: {{ block.settings.image_overlay_background_gradient }};
      {% endif %}
    }

    {%- if block.settings.text_box_background_color.alpha > 0 -%}
      {% if mobile_text_box_position == 'below' %}@media screen and (min-width: 993px) { {%- endif -%}
        #Slide-{{ section.id }}-{{ forloop.index }} .banner__box {
          --banner-box-background: {{ block.settings.text_box_background_color.red }}, {{ block.settings.text_box_background_color.green }}, {{ block.settings.text_box_background_color.blue }};
        }
      {% if mobile_text_box_position == 'below' %} } {%- endif -%}
    {%- endif -%}
    {%- if block.settings.text_box_opacity > 0 -%}
      #Slide-{{ section.id }}-{{ forloop.index }} .banner__box {
        --banner-box-opacity: {{ block.settings.text_box_opacity | divided_by: 100.0 }};
      }
    {%- endif -%}
    

    #Slide-{{ section.id }}-{{ forloop.index }} .banner__box {
      --banner-box-width: {{ block.settings.text_box_width }}%;
    }
  {%- endfor -%}

  {%- if section.settings.width == 'fixed' -%}
    @media screen and (min-width: 993px) {
      #Slider-{{ section.id }} .banner {
        max-width: {{ section.settings.fixed_width | divided_by: 10.0 }}rem;
        margin-left: auto;
        margin-right: auto;
      }
      #SlideshowSection-{{ section.id }} .slideshow__controls {
        max-width: {{ section.settings.fixed_width | divided_by: 10.0 }}rem;
        width: 100%;
        margin-left: auto;
        margin-right: auto;
      }
    }
  {%- endif -%}
  {% render 'section-padding', section: section %}
  {%- assign animation_type = settings.banner_image_animation -%}
  {%- if section.settings.animation != 'inherit_global' -%}
    {%- assign animation_type = section.settings.animation -%}
  {%- endif -%}

  {%- assign animations_speed_ratio = 20 | minus: section.settings.slider_animations_speed | default: 10 | times: 0.1 -%}
  #Slider-{{ section.id }} {
    --animations-speed-ratio: {{ animations_speed_ratio }};
  }
{%- endstyle -%}



{%- if section.settings.dividing_line == 'top' -%}
  <div class="page-width">
    <div class="dividing-line"></div>
  </div>
{%- endif -%}
<div class="page-width{% if section.settings.width == 'wide' %} page-width--wide{% endif %}">
  <div id="SlideshowSection-{{ section.id }}">
    <slideshow-component
    class="slideshow--first-load slider-mobile-gutter{% if section.settings.layout == 'grid' %} page-width{% endif %}{% if section.settings.show_text_below %} mobile-text-below{% endif %} section-{{ section.id }}-padding"
    role="region"
    aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
    aria-label="{{ section.settings.accessibility_info | escape }}"
    data-enable-slider-animations="{% if section.settings.slider_animations contains 'enable' %}true{% else %}false{% endif %}"
    data-enable-media-animation="{% if section.settings.slider_animations == 'enable' or section.settings.slider_animations == 'enable_only_slides' %}true{% else %}false{% endif %}"
    data-enable-mouse-animation="{{ section.settings.enable_mouse_animation }}"
    data-slider-animations-speed-ratio="{{ animations_speed_ratio }}"
    >
    {%- if section.settings.auto_rotate and section.blocks.size > 1 -%}
        <div class="slideshow__controls slideshow__controls--top slider-buttons{% if section.settings.width != 'wide' %} slider-buttons--negative-margins{% endif %} no-js-hidden{% if section.settings.show_text_below %} slideshow__controls--border-radius-mobile{% endif %}">
        <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
            aria-controls="Slider-{{ section.id }}"
        >
            {% render 'icon-arrow' %}
        </button>
        <div class="slideshow__slider-buttons-wrapper">
          <div class="slider-counter slider-counter--{{ slider_visual }}{% if slider_visual == 'counter' or slider_visual == 'numbers' %} caption{% endif %}">
              {%- if slider_visual == 'counter' -%}
                <span class="slider-counter--current">1</span>
                <span aria-hidden="true"> / </span>
                <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                <span class="slider-counter--total">{{ section.blocks.size }}</span>
              {%- elsif slider_visual == 'bullets' -%}
                <div class="slider-bullets{% if media_count > 10 %} slider-bullets--wrap{% endif %}">
                  {%- for block in section.blocks -%}
                    <button type="button" class="slider-bullet" name="bullet" aria-label="Slide {{ forloop.index }}"></button>
                  {%- endfor -%}
                </div> 
              {%- else -%}
                <div class="slideshow__control-wrapper">
                    {%- for block in section.blocks -%}
                      <button
                          class="slider-counter__link slider-counter__link--{{ slider_visual }} link"
                          aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                          aria-controls="Slider-{{ section.id }}"
                      >
                          {%- if slider_visual == 'numbers' -%}
                          {{ forloop.index -}}
                          {%- else -%}
                          <span class="dot"></span>
                          {%- endif -%}
                      </button>
                    {%- endfor -%}
                </div>
              {%- endif -%}
          </div>
          {%- if section.settings.auto_rotate -%}
              <button
              type="button"
              class="slideshow__autoplay slider-button no-js-hidden{% if section.settings.auto_rotate == false %} slideshow__autoplay--paused{% endif %}{% if section.settings.show_play_button == false %} hidden{% endif %}"
              aria-label="{{ 'sections.slideshow.pause_slideshow' | t }}"
              >
              {%- render 'icon-pause' -%}
              {%- render 'icon-play' -%}
              </button>
          {%- endif -%}
        </div>
        <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
            aria-controls="Slider-{{ section.id }}"
        >
            {% render 'icon-arrow' %}
        </button>
        </div>
        <noscript>
        <div class="slider-buttons">
            <div class="slider-counter">
            {%- for block in section.blocks -%}
                <a
                href="#Slide-{{ section.id }}-{{ forloop.index }}"
                class="slider-counter__link link"
                aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                >
                {{ forloop.index }}
                </a>
            {%- endfor -%}
            </div>
        </div>
        </noscript>
    {%- endif -%}

    <div
        class="slideshow{% if section.settings.slider_animations == 'enable' or section.settings.slider_animations == 'enable_only_texts' %} slideshow--text-animations{% endif %} grid grid--1-col slider slider--slideshow slider--everywhere{% if section.settings.show_text_below %} banner--mobile-bottom{% endif %}{% if section.blocks.first.settings.image == blank %} slideshow--placeholder{% endif %}"
        id="Slider-{{ section.id }}"
        aria-live="polite"
        aria-atomic="true"
        data-autoplay="{{ section.settings.auto_rotate }}"
        data-speed="{{ section.settings.change_slides_speed }}"
    >
        {%- for block in section.blocks -%}
          <div
            class="slideshow__slide grid__item grid--1-col slider__slide"
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            {{ block.shopify_attributes }}
            role="group"
            aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
            aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
            tabindex="-1"
          >
            {%- assign mobile_block_settings = blank -%}
            {%- if block.settings.enable_mobile_settings -%}
              {%- assign mobile_block_settings = block -%}
            {%- endif -%}
            {%- assign mobile_show_image_overlay = true -%}
            {%- if mobile_block_settings.settings.mobile_show_image_overlay == true or mobile_block_settings.settings.mobile_show_image_overlay == false -%}
              {%- assign mobile_show_image_overlay = mobile_block_settings.settings.mobile_show_image_overlay -%}
            {%- endif -%}
            {%- style -%}
              {%- unless mobile_show_image_overlay -%}
                @media screen and (max-width: 992px) {
                  #Slide-{{ section.id }}-{{ forloop.index }} .media-overlay::after {
                    display: none;
                  }
                }
              {%- endunless -%}
              
            
              {%- if section.settings.parallax -%}
                #Slide-{{ section.id }}-{{ forloop.index }} .banner__media .banner__media-background {
                  background-repeat: no-repeat;
                  background-size: cover;
                  background-position: center;
                  background-image: url('{{ block.settings.image | img_url: 'master' }}');
                }
                @media screen and (min-width: 993px) {
                  #Slide-{{ section.id }}-{{ forloop.index }} .banner__media .banner__media-background {
                    background-attachment: fixed;
                  }
                }
                
                @supports (-webkit-overflow-scrolling: touch) {
                  #Slide-{{ section.id }}-{{ forloop.index }} .banner__media .banner__media-background {
                    background-attachment: scroll;
                  }
                }
                {%- if mobile_block_settings.settings.mobile_image != blank -%}
                  #Slide-{{ section.id }}-{{ forloop.index }} .banner__mobile-media .banner__media-background {
                    background-image: url('{{ mobile_block_settings.settings.mobile_image | img_url: 'master' }}');
                  }
                {%- endif -%}
              {%- endif -%}
              {% if block.settings.additional_image_1 != blank %}
                {%- assign image_aspect_ratio = block.settings.additional_image_1.aspect_ratio | default: 0.66 -%}
                {% capture image_aspect_ratio %}{{ 1 | divided_by: image_aspect_ratio | times: 100 }}%{% endcapture %}
              
                #Slide-{{ section.id }}-{{ forloop.index }} .slideshow__additional-media--first {
                  width: {{ block.settings.additional_image_1_width }}%;
                  top: {{ block.settings.additional_image_1_position_top }}%;
                  left: {{ block.settings.additional_image_1_position_left }}%;
                }

                #Slide-{{ section.id }}-{{ forloop.index }} .slideshow__additional-media--first::before {
                  padding-bottom: {{ image_aspect_ratio }};
                }
              {%- endif -%}
              {% if block.settings.additional_image_2 != blank %}
                {%- assign image_aspect_ratio = block.settings.additional_image_2.aspect_ratio | default: 0.66 -%}
                {% capture image_aspect_ratio %}{{ 1 | divided_by: image_aspect_ratio | times: 100 }}%{% endcapture %}
              
                #Slide-{{ section.id }}-{{ forloop.index }} .slideshow__additional-media--second {
                  width: {{ block.settings.additional_image_2_width }}%;
                  top: {{ block.settings.additional_image_2_position_top }}%;
                  left: {{ block.settings.additional_image_2_position_left }}%;
                }

                #Slide-{{ section.id }}-{{ forloop.index }} .slideshow__additional-media--second::before {
                  padding-bottom: {{ image_aspect_ratio }};
                }
              {%- endif -%}
            {%- endstyle -%}
            {% if block.settings.show_ticker %}
              <link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
              <link rel="stylesheet" href="{{ 'section-ticker.css' | asset_url }}" media="print" onload="this.media='all'">

              <noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
              <noscript>{{ 'section-ticker.css' | asset_url | stylesheet_tag }}</noscript>
              {%- style -%}
                #Slide-{{ section.id }}-{{ forloop.index }} .slideshow__ticker {
                  --ticker-background-alpha: {{ block.settings.ticker_background_opacity | divided_by: 100.0 }};
                  {%- if block.settings.ticker_background_color.alpha > 0 -%}
                    --ticker-background-color: {{ block.settings.ticker_background_color.red }}, {{ block.settings.ticker_background_color.green }}, {{ block.settings.ticker_background_color.blue }};
                  {%- endif -%}
                  {%- if block.settings.ticker_text_color.alpha > 0 -%}
                    --ticker-text-color: {{ block.settings.ticker_text_color.red }}, {{ block.settings.ticker_text_color.green }}, {{ block.settings.ticker_text_color.blue }};
                  {%- endif -%}
                }
              {%- endstyle -%}
            {%- endif -%}
            <div class="banner-wrapper">
              <div class="banner banner--{{ section.settings.image_height }}{% if section.blocks.first.settings.image == blank %} banner--image-empty{% endif %}{% if image_2.settings.stack_images_on_mobile and block.settings.image != blank and image_2.settings.image != blank %} banner--stacked{% endif %}{% if mobile_text_box_position == 'below' %} banner--mobile-bottom banner--table-bottom{% else %} banner--mobile-adapt banner--mobile-{{ mobile_text_box_position }} banner--table-{{ mobile_text_box_position }}{%- endif -%}{% if section.settings.text_box_opacity == 0 %} banner--desktop-transparent{% endif %} link-underlined-trigger hover-animation-trigger animated-appearance">
                {%- if block.settings.image != blank -%}
                  <div class="slideshow__media banner__media banner__first-media{% if block.settings.image == blank and image_2.settings.image == blank %} placeholder{% endif %}{% if image_2.settings.image != blank %} banner__media-half{% endif %} media{% if mobile_block_settings.settings.mobile_image != blank %} small-hide medium-hide{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %} media-overlay hover-animation hover-animation--{{ animation_type }}">
                    {%- if section.settings.parallax -%}
                      <div class="banner__media-background hover-animation__image"></div>
                    {%- else -%}
                      <img
                        srcset="
                          {%- if section.settings.image_behavior == 'none' -%}
                            {%- if block.settings.image.width >= 375 -%}{{ block.settings.image | img_url: '375x' }} 375w,{%- endif -%}
                            {%- if block.settings.image.width >= 550 -%}{{ block.settings.image | img_url: '550x' }} 550w,{%- endif -%}
                            {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | img_url: '750x' }} 750w,{%- endif -%}
                            {%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | img_url: '1100x' }} 1100w,{%- endif -%}
                            {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | img_url: '1500x' }} 1500w,{%- endif -%}
                            {%- if block.settings.image.width >= 1780 -%}{{ block.settings.image | img_url: '1780x' }} 1780w,{%- endif -%}
                            {%- if block.settings.image.width >= 2000 -%}{{ block.settings.image | img_url: '2000x' }} 2000w,{%- endif -%}
                            {%- if block.settings.image.width >= 3000 -%}{{ block.settings.image | img_url: '3000x' }} 3000w,{%- endif -%}
                            {%- if block.settings.image.width >= 3840 -%}{{ block.settings.image | img_url: '3840x' }} 3840w,{%- endif -%}
                          {%- else -%}
                            {%- if block.settings.image.width >= 375 -%}{{ block.settings.image | img_url: '450x' }} 450w,{%- endif -%}
                            {%- if block.settings.image.width >= 550 -%}{{ block.settings.image | img_url: '660x' }} 660w,{%- endif -%}
                            {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | img_url: '900x' }} 900w,{%- endif -%}
                            {%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | img_url: '1320x' }} 1320w,{%- endif -%}
                            {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | img_url: '1800x' }} 1800w,{%- endif -%}
                            {%- if block.settings.image.width >= 1780 -%}{{ block.settings.image | img_url: '2136x' }} 2136w,{%- endif -%}
                            {%- if block.settings.image.width >= 2000 -%}{{ block.settings.image | img_url: '2400x' }} 2400w,{%- endif -%}
                            {%- if block.settings.image.width >= 3000 -%}{{ block.settings.image | img_url: '3600x' }} 3600w,{%- endif -%}
                            {%- if block.settings.image.width >= 3840 -%}{{ block.settings.image | img_url: '7680x' }} 7680w,{%- endif -%}
                          {%- endif -%}
                          {{ block.settings.image | img_url: 'master' }} {{ block.settings.image.width }}w"
                        sizes="{% if image_2.settings.image != blank and image_2.settings.stack_images_on_mobile %}(min-width: 577px) 50vw, 100vw{% elsif image_2.settings.image != blank %}50vw{% else %}100vw{% endif %}"
                        src="{{ block.settings.image | img_url: '1500x' }}"
                        loading="lazy"
                        class="image-loading-fade"
                        onload="this.classList.add('image-loading-fade--loaded')"
                        alt="{{ block.settings.image.alt | escape }}"
                        width="{{ block.settings.image.width }}"
                        height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio }}"
                        style="object-position: {{ block.settings.image.presentation.focal_point }};"
                        {% if image_2.settings.image != blank %}class="banner__media-image-half"{% endif %}
                      >
                      {%- if block.settings.additional_image_1 != blank -%}
                        <div class="slideshow__additional-media slideshow__additional-media--first{% if block.settings.additional_image_enable_shadow_1 %} slideshow__additional-media--shadow{% endif %} ignore-media-style small-hide medium-hide">
                          <div class="slideshow__additional-media-inner">
                            <img
                              srcset="
                                {% capture additional_image_width %}{{ 375 | divided_by: 100.00 | times: block.settings.additional_image_1_width| ceil }}x{% endcapture %}
                                {%- if block.settings.additional_image_1.width >= 375 -%}{{ block.settings.additional_image_1 | img_url: additional_image_width }} 375w,{%- endif -%}
                                {% capture additional_image_width %}{{ 550 | divided_by: 100.00 | times: block.settings.additional_image_1_width| ceil }}x{% endcapture %}
                                {%- if block.settings.additional_image_1.width >= 550 -%}{{ block.settings.additional_image_1 | img_url: additional_image_width }} 550w,{%- endif -%}
                                {% capture additional_image_width %}{{ 750 | divided_by: 100.00 | times: block.settings.additional_image_1_width| ceil }}x{% endcapture %}
                                {%- if block.settings.additional_image_1.width >= 750 -%}{{ block.settings.additional_image_1 | img_url: additional_image_width }} 750w,{%- endif -%}
                                {% capture additional_image_width %}{{ 1100 | divided_by: 100.00 | times: block.settings.additional_image_1_width| ceil }}x{% endcapture %}
                                {%- if block.settings.additional_image_1.width >= 1100 -%}{{ block.settings.additional_image_1 | img_url: additional_image_width }} 1100w,{%- endif -%}
                                {% capture additional_image_width %}{{ 1500 | divided_by: 100.00 | times: block.settings.additional_image_1_width| ceil }}x{% endcapture %}
                                {%- if block.settings.additional_image_1.width >= 1500 -%}{{ block.settings.additional_image_1 | img_url: additional_image_width }} 1500w,{%- endif -%}
                                {% capture additional_image_width %}{{ 1780 | divided_by: 100.00 | times: block.settings.additional_image_1_width| ceil }}x{% endcapture %}
                                {%- if block.settings.additional_image_1.width >= 1780 -%}{{ block.settings.additional_image_1 | img_url: additional_image_width }} 1780w,{%- endif -%}
                                {% capture additional_image_width %}{{ 2000 | divided_by: 100.00 | times: block.settings.additional_image_1_width| ceil }}x{% endcapture %}
                                {%- if block.settings.additional_image_1.width >= 2000 -%}{{ block.settings.additional_image_1 | img_url: additional_image_width }} 2000w,{%- endif -%}
                                {% capture additional_image_width %}{{ 3000 | divided_by: 100.00 | times: block.settings.additional_image_1_width| ceil }}x{% endcapture %}
                                {%- if block.settings.additional_image_1.width >= 3000 -%}{{ block.settings.additional_image_1 | img_url: additional_image_width }} 3000w,{%- endif -%}
                                {% capture additional_image_width %}{{ 3840 | divided_by: 100.00 | times: block.settings.additional_image_1_width| ceil }}x{% endcapture %}
                                {%- if block.settings.additional_image_1.width >= 3840 -%}{{ block.settings.additional_image_1 | img_url: additional_image_width }} 3840w,{%- endif -%}
