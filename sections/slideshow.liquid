                                {%- if block.settings.additional_image_2.width >= 3000 -%}{{ block.settings.additional_image_2 | img_url: additional_image_width }} 3000w,{%- endif -%}
                                {% capture additional_image_width %}{{ 3840 | divided_by: 100.00 | times: block.settings.additional_image_2| ceil }}x{% endcapture %}
                                {%- if block.settings.additional_image_2.width >= 3840 -%}{{ block.settings.additional_image_2 | img_url: additional_image_width }} 3840w,{%- endif -%}
