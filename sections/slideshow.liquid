                            {%- if block.settings.button_label_1 != blank -%}
                              <div class=" slideshow__content-element slideshow__content-element--animate-bottom">
                                {%- assign button_link = block.settings.button_link_1 | default: block.settings.link -%}
                                {%- assign button_style_id = '#Slide-' | append: section.id | append: '-' | append: forloop.index | append: ' .banner__first-button' -%}
