                      aria-controls="Slider-{{ section.id }}"
                  >
                      {%- if slider_visual == 'numbers' -%}
                      {{ forloop.index -}}
                      {%- else -%}
                      <span class="dot"></span>
                      {%- endif -%}
                  </button>
                  {%- endfor -%}
              </div>
              {%- endif -%}
          </div>
        
          {%- if section.settings.auto_rotate -%}
              <button
              type="button"
              class="slideshow__autoplay slider-button no-js-hidden{% if section.settings.auto_rotate == false %} slideshow__autoplay--paused{% endif %}{% if section.settings.show_play_button == false %} hidden{% endif %}"
