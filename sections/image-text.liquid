<style>
  {% if section.settings.frontpage_grid_style == 'standard' and section.settings.featured_links_per_row == '1' %}
    .featured-link--section {
      margin-bottom: 3%;
    }
    @media only screen and (max-width: 480px) {
      .featured-link--section {
        margin-bottom: 10%;
      }
    }
    .featured-link--half {
      width: 45%;
    }
    .featured-link--margin {
      {% if section.settings.frontpage_image_position == 'right' %}
        margin-left: 3%;
      {% else %}
        margin-left: 0%;
        margin-right: 3%;
      {% endif %}
    }
    .featured-link--section:nth-child(even) .featured-link--margin {
      {% if section.settings.frontpage_image_position == 'right' %}
        margin-left: 0%;
        margin-right: 3%;
      {% else %}
        margin-left: 3%;
        margin-right: 0%;
      {% endif %}
    }
  {% elsif section.settings.frontpage_grid_style == 'standard' and section.settings.featured_links_per_row == '2' %}
    @media only screen and (max-width: 480px) {
      .featured-link--section {
        margin-bottom: 10%;
      }
    }
    .featured-link--margin {
      margin-right: 0%;
      margin-left: 0%;
    }
    .featured-link--section:nth-child(even) .featured-link--margin {
      margin-left: 0%;
      margin-right: 0%;
    }
  {% endif %}
  .mw_form {
    display: none;
}
  .mw_title{
    font-family: 'Oswald';
    font-weight: 600;
    letter-spacing: 0;
    font-size: 30px;
    line-height: 35px;
    color: #000;
  }
  div.content {
    padding: 5% 0px !important;
}
  .featured-link--half img {
    display: block;
    margin: 0 auto;
    width: 100%;
    max-width: 500px;
}
  .featured-link--half .info {
    display: inline-block;
    width: 100%;
    margin: 0 auto;
/*     padding: 20px; */
}
  @media screen and (max-width: 768px) {
    div.content {
    padding: 25% 10px 19% !important;
    }
    .container {
    width: 100%;
}
    .featured-link--half .info {
    display: inline-block;
    width: 100%;
    margin: 0 auto;
    padding-top: 5%;
}
  }
  
